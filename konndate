import sys

if len(sys.argv) != 4:
    print("Error: 引数の数が違います。", file=sys.stderr)
    print(f"使い方: {prog} <ジャンル1> <ジャンル2> <ジャンル3>")
    print("  <ジャンル1>: 肉 / 魚 / 麺")
    print("  <ジャンル2>: 例) 焼く, 煮る, 揚げる, 丼 など")
    print("  <ジャンル3>: 例) 牛, 豚, 鳥 など")
    print()
    print(f"  例: {prog} 肉 焼く 牛")
    sys.exit(0)                      
